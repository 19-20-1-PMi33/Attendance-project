@model IEnumerable<Attendance.Models.Student>
@{
    //ViewData["Title"] = "Home Page";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Student</title>
</head>
<body>
    <table>
        <tr>
            <td>Group</td>
            <td>Name</td>
            <td>Attendance</td>
            <td></td>
        </tr>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Group</td>
                <td>@student.Student_name</td>
                <td>@student.Attend</td>
            </tr>
        }
    </table>
</body>
</html>
