
@model Attendance.Models.Subject

@{
    ViewData["Title"] = "AddSubject";
}

<div class="super_container">

    <h1>Create</h1>

    <h4>Subject</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="AddSubject">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Group" class="control-label"></label>
                    <input asp-for="Group" class="form-control" />
                    <span asp-validation-for="Group" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Lesson" class="control-label"></label>
                    <input asp-for="Lesson" class="form-control" />
                    <span asp-validation-for="Lesson" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a href='javascript:history.go(-1)'>Go Back to Previous Page</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }

</div>